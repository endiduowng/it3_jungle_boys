<% saved.each do |add| %>
  <div class="border row align-items-center">
    <div class="no col-2"><%= current_user.adds.find_index(add) + 1 %></div>
    <div class="anime col-2 border-left">
      <%= link_to anime_path(add.anime) do %>
        <%= image_tag add.anime.picture, class: "img-responsive", height: "80px", width: "80px" %>
      <% end %>
    </div>
    <div class="anime-name col-6"><%= add.anime.name %></div>
    <!-- <div class="rating col-3">
      <span class="glyphicon glyphicon-star" style="color:#EED30B"></span>
      <span class="glyphicon glyphicon-star" style="color:#EED30B"></span>
      <span class="glyphicon glyphicon-star" style="color:#EED30B"></span>
    </div>
    <div class="ranking col-3">40</div> -->
    <div class="remove col-2">
      <%= link_to "Delete", add_path(add), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  </div>
<% end %>
