<html>

<head>
	<title>
		Most Popular Videos
	</title>
	<link rel="stylesheet" type="text/css" href="https://myanimelist.cdn-dena.com/static/assets/css/pc/style-abc038a5d1.css">
</head>

<body class="page-common season" data-ms="false">
	<div id="myanimelist">
		<div class="wrapper ">
			<div id="contentWrapper">
				<div>
					<h1 class="h1">Most Popular Videos</h1>
				</div>
				<div id="content" class="pl0 pr0">
					<div class="navi-seasonal js-navi-seasonal" style="left: 113px;">
						<%= paginate @animes, :method => :post, style: "display:inline-block;" %>
					</div>
					<div class="js-categories-seasonal" style="padding-top: 0px;">
						<div class="seasonal-anime-list js-seasonal-anime-list js-seasonal-anime-list-key-1 clearfix">

							<% @animes.each do |anime| %>
							<div class="seasonal-anime js-seasonal-anime" data-genre="1,2,10,11,22">
								<div>
									<div class="title">
										<p class="title-text">
											<%= link_to anime.name, anime_path(anime) %>
										</p>
									</div>

									<div class="prodsrc">
										<span class="producer"><%= anime.producer %></span>
										<div class="eps">
											<span><%= anime.episode %></span>
										</div>

										<span class="source"><%= anime.source %></span>

										<a href="" title="Quick add anime to my list" class="Lightbox_AddEdit button_add btn-anime-watch-status js-anime-watch-status notinmylist">add</a>
									</div>

									<div class="genres js-genre" id="36474">
										<div class="genres-inner js-genre-inner">
											<% anime.genre.split(/,/).each do |genre| %>
												<span class="genre"><%= genre %></span>
											<% end %>
										</div>
									</div>
								</div>

								<!-- anime poster -->
								<div class="image"><%= image_tag(anime.picture, size: "167x242", alt: anime.name) %>
								</div>

								<div class="synopsis js-synopsis" style="width: 155px;">
									<span class="preline"><%= anime.description %></span>
									<p class="licensors on" data-licensors="Aniplex of America,"><span class="fw-b">Licensor:</span><br><%= anime.licencer %></p>
								</div>

								<div class="information">
									<div class="info">
										TV -
										<span class="remain-time"> <%= anime.premiered %> </span>
									</div>
									<div class="scormem">
										<span class="member fl-r" title="Members">166,262</span>
										<span class="score" title="Score">8.22</span>
									</div>
								</div>
							</div>
							<% end %>

						</div>
					</div>
				</div>
			</div> <!--  control container height -->
			<div style="clear:both;"></div>
			<!-- end rightbody -->
		</div>
	</div>
</body>

</html>