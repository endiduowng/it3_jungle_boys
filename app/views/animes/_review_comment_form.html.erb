<%= form_for [anime, Review.new], :html => {:class => "w-100"}, remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :anime_id, value: anime.id %>
  <div id="rating-story"><p>Story   :</p></div>
  <div id="rating-visual"><p>Visual:</p></div>
  <div id="rating-audio"><p>Audio   :</p></div>
  <br>
  <%= f.text_area :review_description, class: "form-control comment-input border-0", placeholder: "Add a comment...", autocomplete: :off, cols: 70, rows: 5 %>
  <div>
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>

<script>
	$('#rating-story').raty({
		path: '/assets/',
		scoreName: 'review[review_story_score]'
	});

  $('#rating-visual').raty({
		path: '/assets/',
		scoreName: 'review[review_visual_score]'
	});

  $('#rating-audio').raty({
		path: '/assets/',
		scoreName: 'review[review_audio_score]'
	});
</script>
